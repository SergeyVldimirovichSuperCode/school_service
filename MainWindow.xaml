<Window x:Class="school_service.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:school_service"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="AliceBlue"></Grid>
        <Grid Grid.Row="2" Background="AliceBlue"></Grid>
        <Button Grid.Column="0" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" x:Name="BtnBack" Height="30" Width="100" Click="BtnBack_Click" Margin="5"></Button>
        <Image Source="school_logo.ico" HorizontalAlignment="Left"></Image>
        <TextBlock VerticalAlignment="Center" Text="Content" HorizontalAlignment="Center"></TextBlock>
        <Frame Grid.Row="1" Name="MainFrame" ></Frame>
    </Grid>
</Window>
